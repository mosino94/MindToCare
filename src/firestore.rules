rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function activeRole() {
      return exists(/databases/$(database)/documents/active_roles/$(request.auth.uid))
        ? get(/databases/$(database)/documents/active_roles/$(request.auth.uid)).data.role
        : null;
    }

    function identity() {
      return activeRole() != null
        ? request.auth.uid + "_" + activeRole()
        : null;
    }
    
    match /users/{userId} {
      allow read, update: if isAuth() && request.auth.uid == userId;
      
      match /journals/{journalId} {
        allow read, write: if isAuth() && request.auth.uid == userId;
      }
    }

    /* -------- Accounts -------- */
    match /accounts/{uid} {
      allow create: if isAuth() && request.auth.uid == uid;
      allow read, update: if isAuth() && request.auth.uid == uid;
      allow delete: if false;
    }

    /* -------- Active role mirror -------- */
    match /active_roles/{uid} {
      allow read: if isAuth() && request.auth.uid == uid;
      allow create: if isAuth() && request.auth.uid == uid;
      allow update: if isAuth() && request.auth.uid == uid;
      allow delete: if false;
    }

    /* -------- Role profiles -------- */
    match /roles/{uid}/profiles/{role} {
      allow read: if true;
      allow write: if isAuth() && request.auth.uid == uid;
    }

    /* -------- Global unique names -------- */
    match /identity_names/{name} {
      allow read: if true;
      allow create: if isAuth()
        && !exists(/databases/$(database)/documents/identity_names/$(name));
      allow update, delete: if isAuth()
        && resource.data.identityId == identity();
    }

    /* -------- Chats -------- */
    match /chats/{chatId} {

      allow create: if isAuth()
        && request.resource.data.participants is list
        && identity() in request.resource.data.participants;

      allow read, update, delete: if isAuth()
        && identity() in resource.data.participants;

      match /messages/{msgId} {
        allow create: if isAuth()
          && identity() in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
          && request.resource.data.sender == identity();

        allow read: if isAuth()
          && identity() in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    /* -------- User chat list -------- */
    match /user_chats/{identityId}/{chatId} {
      allow read, write: if isAuth() && identityId == identity();
    }

    /* -------- Requests -------- */
    match /requests/{id} {
      allow create: if isAuth()
        && request.resource.data.sender == identity();

      allow read: if isAuth()
        && (resource.data.sender == identity()
            || resource.data.receiver == identity());

      allow update, delete: if isAuth()
        && resource.data.receiver == identity();
    }

    /* -------- Reports -------- */
    match /reports/{id} {
      allow create: if isAuth();
      allow read: if false;
    }

    /* -------- Reviews -------- */
    match /reviews/{listenerIdentity}/{reviewId} {
      allow read: if true;
      allow create: if isAuth()
        && request.resource.data.author == identity();
      allow update, delete: if false;
    }
  }
}
